<header>
    <a href="/">
        <img src="{{ asset('images/logo.png') }}" alt="Logo du Pôle Formation Insertion Hauts-de-France" class="logo">
    </a>
    <div class="header-content">
        <h1>Pole Insertion Formation Hauts-de-France</h1>
        <nav>
            <ul class="main-nav">
                {% for category in categories %}
                    <li class="main-nav-link">
                        <div class="link">
                            {{ category.nom }}
                            <span class="arrow">&#9660;</span>
                        </div>
                        <div class="subnav">
                            <ul>
                                {% for page in category.pages %}
                                    <li class="sub-nav-link">
                                        <a href="{{ path('page_show', { slug: page.slug }) }}">{{ page.titre }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </li>
                {% endfor %}
                <li class="main-nav-link">
                    <a href="/actualites">Actualités</a>
                </li>
            </ul>
        </nav>
    </div>
</header>